{
  "name": "@adventure/database",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev:generate": "pnpm run generate:postgres && pnpm run generate:mongo",
    "dev:push:mongo": "prisma db push --schema=./prisma/mongo.prisma --dotenv=../../.env",
    "dev:migrate:postgres": "prisma migrate dev --name init --schema=./prisma/postgres.prisma --dotenv=../../.env",
    "dev:deploy": "pnpm run dev:generate && pnpm run dev:migrate:postgres && pnpm run dev:push:mongo",
    "deploy:generate": "pnpm run generate:postgres && pnpm run generate:mongo",
    "deploy:migrate:postgres": "prisma migrate deploy --schema=./prisma/postgres.prisma --dotenv=../../.env",
    "deploy:push:mongo": "prisma db push --schema=./prisma/mongo.prisma --dotenv=../../.env",
    "deploy:push:postgres": "prisma db push --schema=./prisma/postgres.prisma --dotenv=../../.env",
    "generate:postgres": "prisma generate --schema=./prisma/postgres.prisma --dotenv=../../.env",
    "generate:mongo": "prisma generate --schema=./prisma/mongo.prisma --dotenv=../../.env",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.9.0",
  "devDependencies": {
    "prisma": "^6.13.0"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@prisma/extension-accelerate": "^2.0.2"
  }
}
