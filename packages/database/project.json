{
  "name": "database",
  "targets": {
    "generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm deploy:generate",
        "cwd": "packages/database"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm deploy:migrate:postgres && pnpm deploy:push:mongo && pnpm deploy:push:postgres",
        "cwd": "packages/database"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["generate", "deploy"],
      "options": {
        "command": "echo 'Database build complete'"
      }
    }
  },
  "tags": []
}
